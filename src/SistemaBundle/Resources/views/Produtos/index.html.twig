{% extends 'base.html.twig' %}

{% block body %}
    <h1>Produtos list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Preco</th>
                <th>Descricao</th>
                <th>Categoria</th>
                <th>Largura</th>
                <th>Comprimento</th>
                <th>imagem</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produto in produtos %}
            <tr>
                <td><a href="{{ path('produtos_show', { 'id': produto.id }) }}">{{ produto.id }}</a></td>
                <td>{{ produto.nome }}</td>
                <td>{{ produto.preco }}</td>
                <td>{{ produto.descricao }}</td>
                <td>{{ produto.categoria }}</td>
                <td>{{ produto.largura }}</td>
                <td>{{ produto.comprimento }}</td>
                <td>{{ produto.imagem }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('produtos_show', { 'id': produto.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('produtos_edit', { 'id': produto.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('produtos_new') }}">Create a new produto</a>
        </li>
    </ul>
{% endblock %}
